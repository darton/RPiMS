[Unit]
Description=gunicorn.service - RPiMS Flask application launched from Gunicorn.
After=network.target
Documentation=https://github.com/darton/RPiMS

[Service]
User={{ rpims_user }}
Group={{ rpims_user }}
WorkingDirectory=/opt/RPiMS/app/
ExecStart=/usr/bin/gunicorn --workers 1 wsgi:app --bind 127.0.0.1:8000
 
[Install]
WantedBy=multi-user.target
