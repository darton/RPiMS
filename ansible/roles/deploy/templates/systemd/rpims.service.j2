[Unit]
Description=RPiMS Service
After=network.target
Conflicts=getty@tty1.service
Documentation=https://github.com/darton/RPiMS

[Service]
Type=simple
User={{ rpims_user }}
Group={{ rpims_user }}
ExecStart={{ rpims_install_dir }}/daemon/rpims.py
StandardInput=tty-force
WorkingDirectory={{ rpims_install_dir }}

RuntimeDirectory=rpims
RuntimeDirectoryMode=0755
PIDFile=/run/{{ rpims_user }}/rpims.pid

[Install]
WantedBy=multi-user.target
